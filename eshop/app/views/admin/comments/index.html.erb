<p id="notice"><%= notice %></p>

<h1>Admin Comments</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Review</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.content %></td>
        <td><%= comment.review_id %></td>
        <td><%= comment.user_id %></td>
        <td><%= link_to 'Show', admin_comment_path(comment) %></td>
        <td><%= link_to 'Edit', edit_admn_comment_path(comment) %></td>
        <td><%= link_to 'Destroy', admin_comment_pth(comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Admin Comment', new_admin_comment_path %>
