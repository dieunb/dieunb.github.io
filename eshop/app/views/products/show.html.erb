<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Quantity:</strong>
  <%= @product.quantity %>
</p>

<p>
  <strong>Category:</strong>
  <%= @product.category.name %>
</p>

<p>
  <strong>Avg rating:</strong>
  <%= @product.aggregate_rating %>
</p>

<hr />
<% if user_signed_in? %>
  <%= render 'reviews/form', review: @review %>
<% end %>
<hr />

<% @product.reviews.each do |review| %>
  <p>Content: <%= review.content %> <br/> Rating: <%= review.rating %></p>
  <ul id='comments_of_review_<%= review.id %>'>
    <% review.comments.each do |comment| %>
      <li>
        <p><%= comment.user.email %>: <%= comment.content %></p>
      </li>
    <% end %>
  </ul>

  <% if user_signed_in? %>
    <%= render 'comments/form', review: review, comment: @comment %>
  <% end %>
<% end %>

<%= link_to 'Home', root_path %> |
<%= link_to 'Back', products_path %>
